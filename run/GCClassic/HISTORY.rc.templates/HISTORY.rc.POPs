  CloudConvFlux.frequency:    ${RUNDIR_HIST_TIME_AVG_FREQ}
  CloudConvFlux.duration:     ${RUNDIR_HIST_TIME_AVG_DUR}
  CloudConvFlux.mode:         'time-averaged'
  CloudConvFlux.fields:       'CloudConvFlux_?ADV?           ',
